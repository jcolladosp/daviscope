<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PreguntaActivity"
    android:id="@+id/fondoPregunta"
    android:background="@drawable/fondo2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/explicacion"
            android:id="@+id/txExplicacion"
            android:layout_marginTop="52dp"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edPregunta"
            android:layout_below="@+id/txExplicacion"
            android:layout_marginTop="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/hint"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:textStyle="italic"
            android:textColorHint="@android:color/white"
            android:inputType="text" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/aceptar"
            android:id="@+id/btAceptar"
            android:layout_marginTop="67dp"
            android:layout_below="@+id/edPregunta"
            android:layout_centerHorizontal="true"
            android:background="@color/primary"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
