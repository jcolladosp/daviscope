<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="es.jcolladosp.daviscope.ResultadoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pregunta"
        android:id="@+id/txPregunta"
        android:layout_marginTop="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Si/NO"
        android:id="@+id/txSiNo"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/txPregunta"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Palabra 1"
        android:id="@+id/txPalabra1"
        android:layout_below="@+id/txSiNo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Palabra 2"
        android:id="@+id/txPalabra2"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/txPalabra1"
        android:layout_alignLeft="@+id/txPalabra1"
        android:layout_alignStart="@+id/txPalabra1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Palabra 3"
        android:id="@+id/txPalabra3"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txPalabra2"
        android:layout_alignLeft="@+id/txPalabra2"
        android:layout_alignStart="@+id/txPalabra2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compartir"
        android:id="@+id/btCompartir"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/txPalabra3"
        android:layout_alignLeft="@+id/btOtra"
        android:layout_alignStart="@+id/btOtra"
        android:layout_alignRight="@+id/btOtra"
        android:layout_alignEnd="@+id/btOtra" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otra"
        android:id="@+id/btOtra"
        android:layout_below="@+id/btCompartir"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
